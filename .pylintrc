[MASTER]

# Add files or directories to the blacklist. They should be base names, not paths.
ignore=CVS,venv,.venv,migrations

# Pickle collected data for later comparisons.
persistent=yes

# List of plugins (as comma separated values of python modules names) to load.
load-plugins=

# Use multiple processes to speed up Pylint.
jobs=1

# Allow loading of arbitrary C extensions.
unsafe-load-any-extension=no

# A comma-separated list of package or module names from where C extensions may be loaded.
extension-pkg-whitelist=


[MESSAGES CONTROL]

# Only show warnings with the listed confidence levels.
confidence=

# Disable selected warnings
disable=super-on-old-class,arguments-differ,signature-differs,method-hidden,abstract-method,no-member,relative-import,no-init,import-error,attribute-defined-outside-init,abstract-class-not-used,unused-argument,unused-variable,invalid-name,duplicate-code,abstract-class-little-used,too-few-public-methods,too-many-instance-attributes,too-many-ancestors,too-many-return-statements,too-many-lines,too-many-locals,too-many-function-args,too-many-public-methods,too-many-arguments,bad-continuation,no-self-use,missing-docstring,fixme,star-args,locally-disabled,locally-enabled,bad-option-value


[REPORTS]

# Output format: text, parseable, colorized, msvs, html.
output-format=text

# Display full report or only messages
reports=no

# Evaluation score formula
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)


[SPELLING]

# Spelling configuration (requires python-enchant)
spelling-dict=
spelling-ignore-words=
spelling-private-dict-file=
spelling-store-unknown-words=no


[SIMILARITIES]

# Minimum number of lines for a code block to be considered similar
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no


[LOGGING]

# Logging modules to validate format string usage
logging-modules=logging


[MISCELLANEOUS]

# Tags for special notes in code
notes=FIXME,XXX,TODO


[VARIABLES]

# Check for unused imports in __init__.py
init-import=yes

# Regex for dummy variables
dummy-variables-rgx=_$|dummy

# Additional names assumed to be builtins
additional-builtins=

# Callback function identifier patterns
callbacks=cb_,_cb


[TYPECHECK]

# Ignore missing members in mixins
ignore-mixin-members=yes

# Skip member checks for these modules and classes
ignored-modules=
ignored-classes=SQLObject

# Dynamically generated members
generated-members=REQUEST,acl_users,aq_parent


[BASIC]

# Functions that should not be used
# bad-functions=map,filter,input

# Good and bad variable names
good-names=i,j,k,ex,Run,_
bad-names=foo,bar,baz,toto,tutu,tata

# Naming convention regexes
function-rgx=[a-z_][a-z0-9_]{2,50}$
variable-rgx=[a-z_][a-z0-9_]{1,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
method-rgx=[a-z_][a-z0-9_]{2,30}$

# Docstring settings
no-docstring-rgx=__.*__
docstring-min-length=-1

# Naming convention hints (for your team, not parsed by pylint)
# function names:        [a-z_][a-z0-9_]{2,50}$
# variable names:        [a-z_][a-z0-9_]{1,30}$
# constant names:        ([A-Z_][A-Z0-9_]*|__.*__)
# attribute names:       [a-z_][a-z0-9_]{2,30}$
# argument names:        [a-z_][a-z0-9_]{2,30}$
# class attribute names: ([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))
# class names:           [A-Z_][a-zA-Z0-9]+$
# module names:          ([a-z_][a-z0-9_]*|[A-Z][a-zA-Z0-9]+)$
# method names:          [a-z_][a-z0-9_]{2,30}$


[FORMAT]

# Maximum characters per line
max-line-length=88

# Regex to ignore long lines
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

# Allow short if statement
single-line-if-stmt=no

# Max number of lines in a module
max-module-lines=2000

# Indentation
indent-string='    '
indent-after-paren=4

# Expected line endings: empty (any), LF, or CRLF
expected-line-ending-format=


[IMPORTS]

# Deprecated modules to avoid
deprecated-modules=regsub,TERMIOS,Bastion,rexec

# Graph generation (disabled by default)
import-graph=
ext-import-graph=
int-import-graph=


[CLASSES]

# Methods that define attributes
defining-attr-methods=__init__,__new__,setUp

# Valid names for first argument in classmethods
valid-classmethod-first-arg=cls

# Valid names for first argument in metaclass classmethods
valid-metaclass-classmethod-first-arg=mcs

# Members to exclude from protected access warnings
exclude-protected=_asdict,_fields,_replace,_source,_make


[DESIGN]

# Code complexity thresholds
max-args=12
ignored-argument-names=_.*
max-locals=25
max-returns=6
max-branches=40
max-statements=105
max-parents=7
max-attributes=7
min-public-methods=2
max-public-methods=50


[EXCEPTIONS]

# Overly general exceptions to flag
overgeneral-exceptions=Exception
